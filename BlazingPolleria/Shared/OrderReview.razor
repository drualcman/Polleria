@foreach (var pizza in Order.Pizzas)
{
    <p>
        <strong>
            @(pizza.Size)"
            @pizza.Special.Name
            (S/.@pizza.GetFormattedTotalPrice())
        </strong>
    </p>
}

<p>
    <strong>
        Precio total:
        S/.@Order.GetFormattedTotalPrice()
    </strong>
</p>

@code {
    [Parameter] public Order Order { get; set; }
}
